<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/co_bg_title_bar_dl3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1920">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="347"
            android:orientation="horizontal"
            android:weightSum="347">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"/>
            <FrameLayout
                android:id="@+id/layout_userprofile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="70">
                <com.humaxdigital.automotive.systemui.statusbar.ui.UserProfileView
                    android:id="@+id/img_useprofile"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_vertical|right" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="245"
                android:weightSum="245"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="163"
                    android:layout_gravity="center_vertical|right">
                    <com.humaxdigital.automotive.systemui.statusbar.ui.DateView
                        android:id="@+id/text_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_date"
                        android:layout_gravity="center_vertical|right"
                        android:textColor="@color/colorStatusBarText"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="16" />
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="66"
                    android:layout_gravity="left">
                    <com.humaxdigital.automotive.systemui.statusbar.ui.DateView
                        android:id="@+id/text_date_noon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:textSize="@dimen/text_date_noon"
                        android:layout_gravity="left"
                        android:textColor="@color/colorStatusBarText"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="38" />
        <FrameLayout
            android:id="@+id/layout_climate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1018" />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60" />
        <LinearLayout
            android:id="@+id/layout_system"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="456"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="456">
            <FrameLayout
                android:id="@+id/system_menu_7"
                android:layout_width="0dp"
                android:layout_height="@dimen/system_icon_height"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="57">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/system_menu_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/system_icon_height"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="57">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/system_menu_5"
                android:layout_width="0dp"
                android:layout_height="@dimen/system_icon_height"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="57">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/system_menu_4"
                android:layout_width="0dp"
                android:layout_height="@dimen/system_icon_height"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="57">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/system_menu_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/system_icon_height"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="57">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/system_menu_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/system_icon_height"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="57">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/system_menu_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/system_icon_height"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="57">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/system_menu_0"
                android:layout_width="0dp"
                android:layout_height="@dimen/system_icon_height"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="57">
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>