<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPanelMain"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/co_bg_title_bar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1920">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="297"
            android:orientation="horizontal"
            android:weightSum="297">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32" />
            <FrameLayout
                android:id="@+id/layout_userprofile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70">
                <com.humaxdigital.automotive.systemui.statusbar.ui.UserProfileView
                    android:id="@+id/img_useprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_vertical|center_horizontal" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="31" />
            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="164"
                android:weightSum="164"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:weightSum="90"
                    android:orientation="vertical" >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="84">
                        <com.humaxdigital.automotive.systemui.statusbar.ui.DateView
                            android:id="@+id/text_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_date"
                            android:layout_gravity="center_vertical|right"
                            android:textColor="@color/colorStatusBarText"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="58"
                    android:weightSum="90"
                    android:orientation="vertical" >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="12"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="78">
                        <com.humaxdigital.automotive.systemui.statusbar.ui.DateView
                            android:id="@+id/text_date_noon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_date_noon"
                            android:layout_gravity="center_vertical|left"
                            android:textColor="@color/colorStatusBarText"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="226" />
        <FrameLayout
            android:id="@+id/layout_climate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="876" />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="64" />
        <LinearLayout
            android:id="@+id/layout_system"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="456"
            android:orientation="vertical"
            android:weightSum="90">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="27">
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="36"
                android:weightSum="456"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">
                <FrameLayout
                    android:id="@+id/system_menu_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="51"
                    android:layout_marginRight="@dimen/system_icon_right_margin">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="51"
                    android:layout_marginRight="@dimen/system_icon_right_margin">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="51"
                    android:layout_marginRight="@dimen/system_icon_right_margin">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="51"
                    android:layout_marginRight="@dimen/system_icon_right_margin">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="51"
                    android:layout_marginRight="@dimen/system_icon_right_margin">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="51"
                    android:layout_marginRight="@dimen/system_icon_right_margin">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="51"
                    android:layout_marginRight="@dimen/system_icon_right_margin">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="51"
                    android:layout_marginRight="@dimen/system_icon_right_margin">
                </FrameLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="27">
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>