<com.humaxdigital.automotive.systemui.statusbar.dev.DevNavigationBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height= "match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width = "wrap_content"
            android:layout_height= "match_parent"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGoHome"
                android:layout_height="match_parent"
                android:layout_width ="wrap_content"
                android:text="Home"
                android:layout_margin="@dimen/dev_button_margin"
                android:textSize="@dimen/dev_text_size"/>

            <Button
                android:id="@+id/btnGoBack"
                android:layout_height="match_parent"
                android:layout_width ="wrap_content"
                android:text="Back"
                android:layout_margin="@dimen/dev_button_margin"
                android:textSize="@dimen/dev_text_size"/>

            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height= "match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width = "wrap_content"
                    android:layout_height= "wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btnAppList"
                        android:layout_height="wrap_content"
                        android:layout_width ="130dp"
                        android:text="Apps"
                        android:layout_margin="@dimen/dev_button_margin"
                        android:textSize="@dimen/dev_text_size"/>

                    <Button
                        android:id="@+id/btnSettings"
                        android:layout_height="wrap_content"
                        android:layout_width ="wrap_content"
                        android:text="Settings"
                        android:layout_margin="@dimen/dev_button_margin"
                        android:textSize="@dimen/dev_text_size"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width = "wrap_content"
                    android:layout_height= "wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnUser0"
                        android:layout_height="wrap_content"
                        android:layout_width ="wrap_content"
                        android:text="0"
                        android:layout_margin="@dimen/dev_button_margin"
                        android:textSize="12dp"/>

                    <Button
                        android:id="@+id/btnUser1"
                        android:layout_height="wrap_content"
                        android:layout_width ="wrap_content"
                        android:text="1"
                        android:layout_margin="@dimen/dev_button_margin"
                        android:textSize="12dp"/>

                    <Button
                        android:id="@+id/btnUser2"
                        android:layout_height="wrap_content"
                        android:layout_width ="wrap_content"
                        android:text="2"
                        android:layout_margin="@dimen/dev_button_margin"
                        android:textSize="12dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height= "match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtStartTime"
                    android:layout_height="wrap_content"
                    android:layout_width ="wrap_content"
                    android:layout_margin="1dp"
                    android:text="A:"
                    android:textColor="#a0a0a0"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txtUserSwitchTime"
                    android:layout_height="wrap_content"
                    android:layout_width ="wrap_content"
                    android:layout_margin="1dp"
                    android:text="B:"
                    android:textColor="#a0a0a0"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txtUserSwitchTime"
                    android:layout_height="wrap_content"
                    android:layout_width ="wrap_content"
                    android:layout_margin="1dp"
                    android:text="C:"
                    android:textColor="#a0a0a0"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height= "match_parent"
                android:gravity="top"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/chkCpuUsage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#222222"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:textColor="#aaaaaa"
                    android:text="CPU Usage"
                    android:checked="false" />

                <CheckBox
                    android:id="@+id/chkDropCache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#222222"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:textColor="#aaaaaa"
                    android:text="Drop Cache"
                    android:checked="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height= "match_parent"
                android:gravity="top"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/chkUsbDebugging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#222222"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:textColor="#aaaaaa"
                    android:text="USB ADB"
                    android:checked="false" />

                <CheckBox
                    android:id="@+id/chkUsbHub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#222222"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:textColor="#aaaaaa"
                    android:text="USB Hub"
                    android:checked="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height= "match_parent"
                android:gravity="top"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/chkMapAuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#222222"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:textColor="#aaaaaa"
                    android:text="MapAuto"
                    android:checked="false" />

                <CheckBox
                    android:id="@+id/chkReserved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#222222"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:textColor="#aaaaaa"
                    android:text="Reserved"
                    android:checked="false" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height= "match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height= "match_parent"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCurrentActivity"
                    android:layout_height="wrap_content"
                    android:layout_width ="wrap_content"
                    android:layout_margin="1dp"
                    android:textColor="#cccccc"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/txtSavedActivity"
                    android:layout_height="wrap_content"
                    android:layout_width ="wrap_content"
                    android:layout_margin="1dp"
                    android:textColor="#aaaaaa"
                    android:textSize="16sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnStop"
                android:layout_height="match_parent"
                android:layout_width ="wrap_content"
                android:text="Stop"
                android:layout_margin="0dp"
                android:textSize="@dimen/dev_text_size"/>

            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height= "match_parent"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnLoad"
                    android:layout_height="wrap_content"
                    android:layout_width ="wrap_content"
                    android:text="Load"
                    android:layout_margin="0dp"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/btnSave"
                    android:layout_height="wrap_content"
                    android:layout_width ="wrap_content"
                    android:text="Save"
                    android:layout_margin="0dp"
                    android:textSize="16dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.humaxdigital.automotive.systemui.statusbar.dev.DevNavigationBar>
