<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statusbar"
    android:layout_width="1920px"
    android:layout_height="90px"
    android:background="@color/statusbar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1920">
        <FrameLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="270">
            <FrameLayout
                android:id="@+id/layout_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <FrameLayout
                    android:layout_width="119px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="26px">
                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="119px"
                        android:layout_height="76px"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/co_btn_status"/>
                    <ImageView
                        android:id="@+id/icon_back"
                        android:layout_width="52px"
                        android:layout_height="52px"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/co_ico_status_back"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="119px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="151px">
                    <ImageView
                        android:id="@+id/btn_home"
                        android:layout_width="119px"
                        android:layout_height="76px"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/co_btn_status"/>
                    <ImageView
                        android:id="@+id/icon_home"
                        android:layout_width="52px"
                        android:layout_height="52px"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@drawable/co_ico_status_home"/>
                </FrameLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/layout_userprofile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">
                <com.humaxdigital.automotive.systemui.statusbar.ui.UserProfileView
                    android:id="@+id/img_useprofile"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_marginLeft="50px"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_vertical|left"/>
            </FrameLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1650">
            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_width="317px"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:weightSum="90">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="20" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="50">
                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40px"
                        android:layout_gravity="bottom|left"
                        android:textColor="@color/textColor"
                        android:text="10:28"/>
                    <TextView
                        android:id="@+id/text_apm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18px"
                        android:layout_marginLeft="113px"
                        android:layout_gravity="bottom|left"
                        android:textColor="@color/textColor"
                        android:text="PM"/>
                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30px"
                        android:textColor="@color/textColor"
                        android:layout_gravity="left|bottom"
                        android:layout_marginLeft="187px"
                        android:text="Apr. 24"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="20" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_system"
                android:layout_width="450px"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:weightSum="450">
                <FrameLayout
                    android:id="@+id/system_menu_7"
                    android:layout_width="0dp"
                    android:layout_height="36px"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="51"
                    android:gravity="center_vertical"
                    android:layout_marginRight="6px">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_6"
                    android:layout_width="0dp"
                    android:layout_height="36px"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="51"
                    android:gravity="center_vertical"
                    android:layout_marginRight="6px">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_5"
                    android:layout_width="0dp"
                    android:layout_height="36px"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="51"
                    android:gravity="center_vertical"
                    android:layout_marginRight="6px">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_4"
                    android:layout_width="0dp"
                    android:layout_height="36px"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="51"
                    android:gravity="center_vertical"
                    android:layout_marginRight="6px">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_3"
                    android:layout_width="0dp"
                    android:layout_height="36px"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="51"
                    android:gravity="center_vertical"
                    android:layout_marginRight="6px">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_2"
                    android:layout_width="0dp"
                    android:layout_height="36px"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="51"
                    android:gravity="center_vertical"
                    android:layout_marginRight="6px">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_1"
                    android:layout_width="0dp"
                    android:layout_height="36px"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="51"
                    android:gravity="center_vertical"
                    android:layout_marginRight="6px">
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/system_menu_0"
                    android:layout_width="0dp"
                    android:layout_height="36px"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="51"
                    android:gravity="center_vertical"
                    android:layout_marginRight="6px">
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>