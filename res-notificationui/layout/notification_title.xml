<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|center_vertical"
    android:background="@color/notification_bg">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/notification_default_margin"
        android:textColor="@color/notification_text"
        android:textStyle="bold"
        android:textSize="@dimen/notification_title_text_size" />
    <ImageView
        android:id="@+id/line"
        android:layout_width="@dimen/line_width"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/notification_default_margin"
        android:src="@drawable/co_bg_osd_line" />
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height" />
    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/notification_default_margin"
        android:layout_marginRight="@dimen/notification_default_margin"
        android:textColor="@color/notification_text"
        android:textSize="@dimen/notification_body_text_size"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:singleLine="true" />
    <TextView
        android:id="@+id/subbody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>