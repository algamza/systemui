<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:background="@color/notification_bg">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/notification_title_margin"
        android:textColor="@color/notification_text"
        android:textStyle="bold"
        android:textSize="@dimen/notification_title_text_size"/>
    <ImageView
        android:id="@+id/line"
        android:layout_marginRight="@dimen/notification_line_margin"
        android:layout_width="@dimen/line_width"
        android:layout_height="@dimen/line_height"
        android:src="@drawable/co_bg_osd_line" />
    <ImageView
        android:id="@+id/icon"
        android:layout_marginRight="@dimen/notification_icon_margin"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height" />
    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/notification_body_spacing_margin"
        android:textColor="@color/notification_text"
        android:textSize="@dimen/notification_body_text_size"/>
</LinearLayout>